<Window x:Class="Project_WPF.Views.MemberView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_WPF.Views"
        mc:Ignorable="d"
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:cal="http://www.caliburnproject.org"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Title="MemberView" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <!--LedenLijst-->
        <ComboBox x:Name="Persons" DisplayMemberPath="Fullname" SelectedItem="{Binding SelectedPerson}" 
            materialDesign:HintAssist.Hint="Ledenlijst" Margin="10" VerticalAlignment="Bottom"
                  Grid.Row="1">
        </ComboBox>
        
        <!--Collectie-->
        <GroupBox Grid.Column="1" Header="Collectie" Margin="5">
            <DataGrid x:Name="memberDatagrid"  Margin="5">

            </DataGrid>
        </GroupBox>

        <!--Collectie Buttons-->
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Width="574" Margin="10,0" Grid.Column="1">
            <Button x:Name="Temp" Content="Spel toevoegen" Width="250" Margin="5" />
            <Button x:Name="DeleteGame" Content="Spel verwijderen" Margin="5" Width="250"  />
        </StackPanel>


        <materialDesign:Flipper VerticalAlignment="Top" Height="363" Style="{StaticResource MaterialDesignCardFlipper}">
            <!--Voorkant flipkaart-->
            <materialDesign:Flipper.FrontContent>
                <Grid Height="auto" Width="200">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <materialDesign:ColorZone Mode="PrimaryLight" VerticalAlignment="Stretch">
                        <materialDesign:PackIcon
                          Kind="AccountCircle"
                          Height="100"
                          Width="100"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center" />
                    </materialDesign:ColorZone>
                    <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">

                        <TextBox Text="{Binding Path=TxtFirstname}"
                                 
                            materialDesign:HintAssist.Hint="Voornaam"
                            materialDesign:HintAssist.IsFloating="True"
                            Margin="0 5 0 0">

                        </TextBox>
                        <TextBox Text="{Binding Path=TxtLastname}"
                            Grid.Row="1"
                                 
                            materialDesign:HintAssist.Hint="Achternaam"
                            materialDesign:HintAssist.IsFloating="True"
                            Margin="0 5 0 0">

                        </TextBox>
                        <TextBox Text="{Binding Path=TxtEmail}"
                            
                            materialDesign:HintAssist.Hint="Email"
                            materialDesign:HintAssist.IsFloating="True"
                            Margin="0 5 0 0">

                        </TextBox>
                        <Button  x:Name="AddNewMember" cal:Message.Attach="AddNewMember" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Width="auto"
                            Margin="5"
                            ToolTip="Voeg een nieuw lid toe">
                            Nieuw lid toevoegen
                        </Button>

                        <Button x:Name="EditExistingMember"  cal:Message.Attach="EditExistingMember"
                                    Command="{x:Static materialDesign:Flipper.FlipCommand}"
                                    Margin="5" Width="auto"
                                    Content="{materialDesign:PackIcon AccountEditOutline}"
                                    ToolTip="Bewerk een bestaand lid" />

                    </StackPanel>
                </Grid>
            </materialDesign:Flipper.FrontContent>
            <!--Achterkant flipkaart-->

            <materialDesign:Flipper.BackContent >
                <Grid Height="auto" Width="200" cal:Bind.Model="{Binding }" VerticalAlignment="Top" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <materialDesign:ColorZone
                        Mode="Accent"
                        Padding="6">
                        <StackPanel 
                            Orientation="Horizontal">
                            <Button x:Name="BackButton" cal:Message.Attach="BackButton"
                                Style="{StaticResource MaterialDesignToolForegroundButton}"
                                Command="{x:Static materialDesign:Flipper.FlipCommand}"
                                HorizontalAlignment="Left">
                                <materialDesign:PackIcon
                                    Kind="ArrowLeft"
                                    HorizontalAlignment="Right" />
                            </Button>
                            <TextBlock
                                Margin="8 0 0 0"
                                VerticalAlignment="Center">
                                Gegevens
                            </TextBlock>
                        </StackPanel>
                    </materialDesign:ColorZone>
                    <Grid
                        Grid.Row="1"
                        Margin="0 6 0 0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Width="172">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBox x:Name="SelectedPerson_Firstname" 
                                 
                            materialDesign:HintAssist.Hint="Voornaam"
                            materialDesign:HintAssist.IsFloating="True"
                            Margin="0 12 0 0">

                        </TextBox>
                        <TextBox x:Name="SelectedPerson_Lastname"
                            Grid.Row="1"
                                 
                            materialDesign:HintAssist.Hint="Achternaam"
                            materialDesign:HintAssist.IsFloating="True"
                            Margin="0 12 0 0">

                        </TextBox>
                        <TextBox x:Name="SelectedPerson_Email" 
                            Grid.Row="2"
                            materialDesign:HintAssist.Hint="Email"
                            materialDesign:HintAssist.IsFloating="True"
                            Margin="0 12 0 0">

                        </TextBox>
                        <Button x:Name="CommitMember" cal:Message.Attach="CommitMember" Content="Bevestigen" Margin="0 10 0 0" Grid.Row="3" />
                    </Grid>
                </Grid>
            </materialDesign:Flipper.BackContent>
        </materialDesign:Flipper>

    </Grid>
</Window>
